@model SimpleBlog.Areas.Admin.ViewModels.UsersResetPassword
@{
    ViewBag.Title = "ResetPassword";
}
<h3>Reset Password for @Model.Username</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()     
    <div class="form-group">
        @Html.LabelFor(f => f.Password)
        @Html.PasswordFor(f => f.Password, new { @class = "form-control" })
    </div>
    <input type="submit" value="Reset Password" class="btn btn-primary" />
    <a href="@Url.Action("index")" class="btn btn-danger">Cancel</a>
}